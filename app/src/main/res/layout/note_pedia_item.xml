<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="2dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/id_about_card"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="10dp"
            android:clickable="true"
            app:cardBackgroundColor="#f6edcf"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/text_view_title_pedia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textSize="@dimen/about_description_text_size"
                    android:layout_marginTop="10dp"
                    android:text="About"/>

                <Button
                    android:id="@+id/show_more"
                    android:layout_gravity="left"
                    android:layout_marginLeft="5dp"
                    android:textStyle="normal"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="More"/>

                <TextView
                    android:id="@+id/text_view_desc_pedia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/background_dark"
                    android:text="everything about us" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>